<%= render "devise/shared/error_messages", resource: resource %>
<div class="container">
	<div class="signin-content">
		<div class="signin-image">
			<figure>
				<img src="images/forgot-pass.png" alt="crying-man">
			</figure>
            <%= link_to "Créer un compte", new_registration_path(resource_name), class: "signup-image-link" %><br>
            <%= link_to "j'ai pas reçu le mail d'activation", new_confirmation_path(resource_name), class: "signup-image-link" %><br>
            <%= link_to "Revenir à la page d'acceil", root_path, class: "signup-image-link" %>
		</div>
		<div class="signin-form">
			<h2 class="form-title">Mot de passe oublier</h2>
				<%= form_for(resource, as: resource_name, class: "register-form", url: password_path(resource_name), html: { method: :post }) do |f| %>
                    <div class="form-group">
                        <label for="user_email">
                          <i class="zmdi zmdi-email"></i>
                        </label>
                        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
                    </div>

                    <div class="form-group form-button">
                        <%= f.submit "Envoyez", class: "form-submit" %>
                    </div>
				<% end %>
			</div>
		</div>
	</div>
</div>
<script type="text/javascript">
window.dataLayer = window.dataLayer || [];
function gtag(){dataLayer.push(arguments);}
gtag('js', new Date());

gtag('config', 'UA-23581568-13');
</script>

